<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nasa_image"
        app:layout_constraintEnd_toEndOf="@+id/nasa_image"
        app:layout_constraintStart_toStartOf="@+id/nasa_image"
        app:layout_constraintTop_toTopOf="@+id/nasa_image" />

    <ImageView
        android:id="@+id/nasa_image"
        android:layout_width="88dp"
        android:layout_height="82dp"
        android:layout_marginTop="148dp"
        android:contentDescription="nasa_photo"
        app:layout_constraintBottom_toTopOf="@+id/nasa_image2"
        app:layout_constraintEnd_toStartOf="@+id/nasa_image1"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBAR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nasa_image1"
        app:layout_constraintEnd_toEndOf="@+id/nasa_image1"
        app:layout_constraintStart_toStartOf="@+id/nasa_image1"
        app:layout_constraintTop_toTopOf="@+id/nasa_image1" />

    <ImageView
        android:id="@+id/nasa_image1"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_marginEnd="68dp"
        android:contentDescription="nasa_photo"
        app:layout_constraintBottom_toTopOf="@+id/nasa_image3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBAR2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nasa_image2"
        app:layout_constraintEnd_toEndOf="@+id/nasa_image2"
        app:layout_constraintStart_toStartOf="@+id/nasa_image2"
        app:layout_constraintTop_toTopOf="@+id/nasa_image2" />

    <ImageView
        android:id="@+id/nasa_image2"
        android:layout_width="94dp"
        android:layout_height="81dp"
        android:layout_marginBottom="224dp"
        android:contentDescription="nasa_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nasa_image3"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBAR3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nasa_image3"
        app:layout_constraintEnd_toEndOf="@+id/nasa_image3"
        app:layout_constraintStart_toStartOf="@+id/nasa_image3"
        app:layout_constraintTop_toTopOf="@+id/nasa_image3" />

    <ImageView
        android:id="@+id/nasa_image3"
        android:layout_width="79dp"
        android:layout_height="75dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="68dp"
        android:contentDescription="nasa_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nasa_image1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECKKK!"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="331dp" />


</androidx.constraintlayout.widget.ConstraintLayout>